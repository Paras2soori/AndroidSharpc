<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jahan.uidemo.Thirdpage">




        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">



            <EditText
                android:id="@+id/et3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="25dp"
                android:background="#ffffff"/>/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="#b1ce8a"
                android:gravity="center_vertical"
                android:text="نام"
                android:textAlignment="center"
                android:layout_alignBaseline="@+id/et3"
                android:layout_alignBottom="@+id/et3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/et3"
                android:layout_toRightOf="@+id/et3" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/et3"
                android:layout_marginTop="10dp"
                android:background="#ffffff"/>/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="#b1ce8a"
                android:gravity="center_vertical"
                android:text="نام خانوادگی"
                android:textAlignment="center"
                android:layout_above="@+id/et5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/et3"
                android:layout_toEndOf="@+id/et3" />

            <EditText
                android:id="@+id/et5"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/et4"
                android:layout_marginTop="10dp"
                android:background="#ffffff"/>/>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="#b1ce8a"
                android:gravity="center_vertical"
                android:text="تلفن همراه"
                android:textAlignment="center"
                android:layout_above="@+id/et6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/tv4"
                android:layout_alignStart="@+id/tv4" />

            <EditText
                android:id="@+id/et6"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/et5"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:inputType="textEmailAddress"/>
                />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="150dp"
                android:layout_height="30dp"

                android:background="#b1ce8a"
                android:gravity="center_vertical"
                android:text="ایمیل"
                android:textAlignment="center"
                android:layout_above="@+id/et7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/tv5"
                android:layout_alignStart="@+id/tv5" />

            <EditText
                android:id="@+id/et7"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/et6"
                android:layout_marginTop="10dp"
                android:background="#ffffff"/>/>

            <TextView
                android:id="@+id/tv7"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="#b1ce8a"
                android:gravity="center_vertical"
                android:text="نام کاربری"
                android:textAlignment="center"
                android:layout_above="@+id/et8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/tv6"
                android:layout_alignStart="@+id/tv6" />

            <EditText
                android:id="@+id/et8"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/et7"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:inputType="textPassword"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/tv8"
                android:background="#b1ce8a"
                android:gravity="center_vertical"
                android:text="رمز عبور"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/et8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/tv7"
                android:layout_alignStart="@+id/tv7" />




            <Button
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/et8"
                android:layout_marginTop="10dp"
                android:background="#2d889c"
                android:onClick="sendMessage2"
                android:text="ثبت" />


        </RelativeLayout>


    </RelativeLayout>




